# Required environment variables
# These must be set for the application to run
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_BASE_URL=

# Important but optional variables
VITE_SENTRY_DSN=

# Core Application
NODE_ENV=development
VITE_APP_TITLE=Inkwell
VITE_APP_VERSION=1.1.0

# === Beginner Mode & First Draft Path ===
# Enable the new user onboarding system
ENABLE_BEGINNER_MODE=true

# Percentage of new users to enroll in Beginner Mode (0.0-1.0)
BEGINNER_MODE_PERCENT=0.10

# Target word count for A3 activation milestone
VITE_TARGET_WORD_COUNT=300

# Time limit for success metric (milliseconds - 15 minutes)
VITE_SUCCESS_TIME_LIMIT=900000

# Default UI mode for new users (beginner|pro)
VITE_DEFAULT_UI_MODE=beginner

# === Feature Flags ===
# Enable/disable First Draft Path onboarding flow
VITE_FIRST_DRAFT_PATH_ENABLED=true

# Enable old tour system (deprecated - set to false in production)
VITE_ENABLE_OLD_TOUR=false

# Enable welcome modal (deprecated - set to false in production)
VITE_ENABLE_WELCOME_MODAL=false

# Enable welcome project with demo chapters for first-time users
VITE_ENABLE_WELCOME_PROJECT=true

# Enable EPUB 3.0 export (minimal, valid EPUB with single-spine content)
VITE_ENABLE_EPUB_EXPORT=true

# Enable Power Tools menu in Pro mode
VITE_POWER_TOOLS_ENABLED=true

# Enable just-in-time AI setup
VITE_JIT_AI_SETUP_ENABLED=true

# Enable Free Preview Mode (read-only demo for unauthenticated users)
VITE_ENABLE_FREE_PREVIEW=true

# === v0.6.0 Consolidation Feature Flags ===
# Enable new chapter-based data model (false = legacy scene-based model)
# Set to false in production until full migration is complete
# Set to true in preview/staging branches for testing
VITE_ENABLE_CHAPTER_MODEL=false

# v0.8.0: Enhanced editor with integrated autosave (default: false)
# Set to true to enable EnhancedChapterEditor with AutosaveService
VITE_ENABLE_ENHANCED_EDITOR=false

# === AI Services ===
# Anthropic Claude API key
VITE_CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API key
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Enable AI mock mode for demos (true|false)
VITE_AI_MOCK_MODE=false

# AI request timeout (milliseconds)
VITE_AI_REQUEST_TIMEOUT=30000

# === Two-Tier AI Integration ===
# Enable custom AI keys feature
VITE_ENABLE_CUSTOM_AI_KEYS=true

# Default provider for Simple Mode (anthropic|openai|google)
VITE_DEFAULT_SIMPLE_PROVIDER=anthropic

# Default model for Simple Mode
VITE_DEFAULT_SIMPLE_MODEL=claude-3-5-sonnet-20241022

# Server-side API keys for Simple Mode (DO NOT SET THESE IN .env - use Vercel environment variables)
# These should only be set in your deployment platform (Vercel, etc.)
# ANTHROPIC_API_KEY=your_server_anthropic_key
# OPENAI_API_KEY=your_server_openai_key
# GOOGLE_API_KEY=your_server_google_key
# AI_SIMPLE_PROVIDER=anthropic

# === Analytics ===
# Analytics service API key
VITE_ANALYTICS_KEY=your_analytics_key_here

# Enable activation funnel tracking
VITE_ACTIVATION_TRACKING_ENABLED=true

# Enable performance monitoring
VITE_PERFORMANCE_MONITORING_ENABLED=true

# === Telemetry ===
# Enable anonymous telemetry collection (default: true)
# Collects performance metrics (autosave latency, cache efficiency, error rates)
# Never collects content, project titles, or personally identifying information
# Users can opt out via Settings â†’ Privacy at any time
VITE_TELEMETRY_ENABLED=true

# Telemetry events tracked:
# - autosave.start, autosave.success, autosave.error
# - editor.autosave.latency (p50, p95, p99)
# - recovery.attempt, recovery.success, recovery.failure
# - onboarding.welcome.*, onboarding.tour.seen, onboarding.learn_more.clicked
# - telemetry.opt_out_changed
# - export.epub.success, export.epub.failure

# === Error Monitoring ===
# Sentry DSN for error tracking and performance monitoring
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry environment (development|staging|production)
VITE_SENTRY_ENVIRONMENT=development

# === Database & Storage ===
# IndexedDB database name
VITE_DB_NAME=inkwell-db

# Storage service endpoint (if using cloud storage)
VITE_STORAGE_ENDPOINT=https://your-storage-endpoint.com

# === Deployment ===
# Base URL for the application
VITE_BASE_URL=http://localhost:5173

# Vercel deployment URL (auto-populated in production)
VERCEL_URL=your-app.vercel.app

# === Development & Debugging ===
# Enable debug logging
VITE_DEBUG_ENABLED=false

# Enable storage debugging
VITE_DEBUG_STORAGE=false

# Enable state debugging
VITE_DEBUG_STATE=false

# === White Label / Partner Configuration ===
# Tenant ID for multi-tenant deployments
VITE_TENANT_ID=default

# Partner branding configuration
VITE_PARTNER_NAME=Inkwell
VITE_PARTNER_LOGO_URL=

# Custom template sets per tenant
VITE_CUSTOM_TEMPLATES_ENABLED=false

# Override onboarding copy per tenant
VITE_CUSTOM_ONBOARDING_COPY=false

# === Emergency Controls ===
# Circuit breaker for AI services (true to disable AI entirely)
VITE_AI_CIRCUIT_BREAKER=false

# Emergency disable for Beginner Mode
VITE_EMERGENCY_DISABLE_BEGINNER=false

# Maintenance mode
VITE_MAINTENANCE_MODE=false