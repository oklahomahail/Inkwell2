{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install",
  "devCommand": "pnpm dev",
  "framework": "vite",
  "rewrites": [
    { "source": "/site.webmanifest", "destination": "/site.webmanifest" },
    { "source": "/manifest.json", "destination": "/manifest.json" },
    { "source": "/icons/(.*)", "destination": "/icons/$1" },
    { "source": "/api/login", "destination": "/api/login.ts" },
    { "source": "/sign-in", "destination": "/index.html" },
    { "source": "/sign-up", "destination": "/index.html" },
    { "source": "/registerSW.js", "destination": "/registerSW.js" },
    { "source": "/sw.js", "destination": "/sw.js" },
    { "source": "/workbox-(.+)\\.js", "destination": "/workbox-$1.js" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*\\.js)", "destination": "/$1" },
    { "source": "/(.*\\.css)", "destination": "/$1" },
    { "source": "/(.*\\.map)", "destination": "/$1" },
    {
      "source": "/(.*\\.png|.*\\.jpg|.*\\.jpeg|.*\\.svg|.*\\.ico|.*\\.webp)",
      "destination": "/$1"
    },
    {
      "source": "/((?!.*\\.(js|css|json|png|jpg|jpeg|svg|ico|webp|map|txt)).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    { "source": "/app", "destination": "/", "permanent": true },
    { "source": "/login", "destination": "/sign-in", "permanent": true },
    { "source": "/register", "destination": "/sign-up", "permanent": true },
    { "source": "/docs", "destination": "https://docs.inkwell.app", "permanent": true }
  ],
  "headers": [
    {
      "source": "/site.webmanifest",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(robots\\.txt|sitemap\\.xml|legal\\.txt)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}
