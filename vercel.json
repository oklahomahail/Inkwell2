{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install",
  "devCommand": "pnpm dev",
  "framework": "vite",
  "routes": [
    { "src": "/api/login", "dest": "/api/login.ts" },
    {
      "src": "/(favicon\\.ico|manifest\\.webmanifest|manifest\\.json|robots\\.txt|sw\\.js|workbox-.*|assets/.*|vite\\.svg|icons/.*)$",
      "dest": "/$1"
    },
    { "src": "/login", "dest": "/index.html" },
    { "src": "/health", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/api/edge-auth" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
