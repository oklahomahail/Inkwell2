{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "schedule": ["every weekend"],
  "dependencyDashboard": true,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "rangeStrategy": "pin"
}
