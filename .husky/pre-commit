#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

set -e

echo "🔒 Running pre-commit checks..."

# Run lint-staged for code formatting and linting
echo "🎨 Running linting and formatting..."
pnpm lint-staged

# Enforce no-console and zero warnings
echo "🚫 Enforcing no-console and no warnings…"
pnpm lint:ci

# Check for file corruption
echo "🛡️ Running corruption detection..."
./scripts/check-file-corruption.sh

# Check for backup files
echo "🔍 Checking for backup files..."
./scripts/check-for-bak-files.sh

# Run tests (but allow to pass if no tests exist)
echo "🧪 Running tests..."
npm test || true

# If we get here, all checks passed
echo "✅ All pre-commit checks passed!"
